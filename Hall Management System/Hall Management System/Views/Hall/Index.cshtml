@using HallManagementSystem.Database.Model
@model List<Hall>
@{
    ViewData["Title"] = "Index";
}

@*<h1>Hall Lists</h1>*@

<div class="container p-3">
    <div class="row pt-4">
        <div class="col-6">
            <h2 class="text-primary">Hall Lists</h2>
        </div>
        <div class="col-6 text-end" >
           <a asp-controller="Hall" asp-action="Add"class="btn btn-primary"><i class="bi bi-plus-circle"></i>&nbsp;  Add New Hall
           </a>
        </div>
    </div>
    <br /><br />
<table class="table table-bordered table-striped" style="width:100%">
    <thead>
        <tr>
            <th>
                Hall Name
            </th>
            <th>
                Location
            </th>
            <th>
                Capacity
            </th>
            <th>
                Description
            </th>
            <th></th>
            <th></th>
        </tr>
    </thead>
    <tbody>
        @foreach(var obj in Model)
        {
            <tr>
                <td width="30%">
                    @obj.Name
                </td>
                <td width="10%">
                    @obj.Location
                </td>
                <td width="10%">
                    @obj.Capacity
                </td>
                <td width="30%">
                    @obj.Description
                </td>
                <td>
                    <div class="w-75 btn-group" role="group">
                        <a asp-controller="Hall" asp-action="Edit" asp-route-id="@obj.Id" class="btn btn-primary mx-2"><i class="bi bi-pencil-square"></i>Edit</a>
                    </div>
                </td>
                <td>
                    <div class="w-75 btn-group" role="group">
                        <a asp-controller="Hall" asp-action="Delete" asp-route-id="@obj.Id" class="btn btn-danger mx-2"><i class="bi bi-trash3-fill"></i>Delete</a>
                    </div>
                </td>
            </tr>
        }
    </tbody>
</table>
</div>