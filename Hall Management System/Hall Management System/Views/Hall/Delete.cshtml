@using HallManagementSystem.Database.Model
@model Hall

<form method="post" asp-action="Delete">
    <div class="border p-3 mt-4">
        <div class="row pb-2">
            <h2 class="text-primary">Delete Hall</h2>
            <hr />
        </div>
        <div class ="mb-3">
            <label asp-for="Name"></label>
            <input asp-for="Name" disabled class="form-control" />
        </div> 
        <div class ="mb-3">
            <label asp-for="Location"></label>
            <input asp-for="Location" disabled class="form-control" />
        </div> 
        <div class ="mb-3">
            <label asp-for="Capacity"></label>
            <input asp-for="Capacity" disabled class="form-control" />
        </div> 
        <div class ="mb-3">
            <label asp-for="Description"></label>
            <input asp-for="Description" disabled class="form-control" />
        </div> 
        <button type="submit" class="btn btn-danger" style="width:150px">Delete</button>
        <a asp-controller="Hall" asp-action="Index" class="btn btn-secondary" style="width:150px">Back To List</a>
    </div>
</form>